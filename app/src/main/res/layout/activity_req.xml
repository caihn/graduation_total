<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_req"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1ebeb"
    tools:context="graduation.chn.cn.graduation.ReqActivity">
    <include android:id="@+id/top_title" layout="@layout/top_no_return"> </include>
    <EditText
        android:id="@+id/et_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/shape_et_login"
        android:drawableLeft="@mipmap/login_draleft_user"
        android:hint="请输入用户名" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_user"
        android:layout_alignStart="@+id/et_user"
        android:layout_below="@+id/et_user"
        android:background="@drawable/shape_et_login"
        android:drawableLeft="@mipmap/ic_lock_outline_black_18dp"
        android:hint="请输入密码" />
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_user"
        android:layout_alignStart="@+id/et_user"
        android:layout_below="@+id/et_pwd"
        android:background="@drawable/shape_et_login"
        android:drawableLeft="@mipmap/ic_email"
        android:hint="请输入正确的邮箱，接收验证" />
    <Button
        android:id="@+id/bt_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="注册"
        android:textSize="20sp"
        android:background="@drawable/shape_bt_login"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_notice_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="直接登陆"
        android:textSize="15sp"
        android:textColor="#aee7a8"
        android:layout_below="@+id/bt_reg"
        android:layout_marginTop="35dp"
        />



</RelativeLayout>
